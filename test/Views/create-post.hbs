<h1>Create Blog Post</h1>

{{#if validationErrors.length}}
    <p>Errors:</p>
    <ul>
       
    </ul>
{{/if}}

<form class="form-horizontal col-10" action="" method="POST">
    <div class="form-group">
        <div class="col-9 col-sm-12">
            <input name="title" value="{{title}}" class="form-input" type="text" id="input-title" placeholder="Title">
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-9 col-sm-12">
            <input name="date" value="{{date}}" class="form-input" type="text" id="input-date" placeholder="Date">
        </div>
    </div>
    
    <input type="submit" value="Create Post" class="btn btn-primary">
</form>