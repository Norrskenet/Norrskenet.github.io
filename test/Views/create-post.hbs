<h1>Create Blog Post</h1>

{{#if validationErrors.length}}
    <p>Errors:</p>
    <ul>
        {{#each validationErrors}}
        <li>{{this}}</li>
        {{/each}}
    </ul>
{{/if}}

<form class="form-horizontal col-6" action="" method="POST">
    <div class="form-group">
        <div class="col-4 col-sm-12">
            <input name="title" value="{{title}}" class="form-input" type="text" id="input-title" placeholder="Title"></input>
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-9 col-sm-12">
            <textarea name="textbody" value="{{textbody}}" class="form-input" type="text" id="input-textbody" placeholder="TextArea"></textarea>
        </div>
    </div>
    
    <input type="submit" value="Create Post" class="btn btn-primary">
</form>